<li class="panel {{#if available}} panel-success {{else}} panel-danger {{/if}}" id="{{name}}_recipe" style="margin-bottom: 0px; padding: 0px">
    <div class="panel-heading" style="font-size: large; font-family: 'Comic Sans MS'">
        <a href="#" onclick="recipes.viewRecipe('{{name}}', '{{ingredients}}', '{{directions}}')">{{name}}</a>
        <a href="#" onclick="recipes.delete_recipe('{{name}}')" style="float: right">
            <span class="glyphicon glyphicon-remove glyphicon-user" id="recipeDelete-{{name}}" style="color:#cccccc; float: right"></span>
        </a>
    </div>
</li>